<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme -->
    <style name="Theme.NimbusTalk" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorSecondaryVariant">@color/my_secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface -->
        <item name="android:colorBackground">@color/background_color_dark</item>
        <item name="colorSurface">@color/surface_color_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>

        <!-- Accent/Tertiary -->
        <item name="colorTertiary">@color/accent_color_dark</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_color_dark</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background_color_dark</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background_color_dark</item>
    </style>

    <!-- Dark Splash Theme -->
    <style name="Theme.NimbusTalk.Splash" parent="Theme.NimbusTalk">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dark Mode Input Fields -->
    <style name="InputField" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/my_primary</item>
        <item name="boxBackgroundColor">@color/input_background_dark</item>
        <item name="hintTextColor">@color/text_hint_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Chat Bubble Styles (SAME NAMES - Android picks the right drawable automatically) -->
    <style name="SentMessageBubble">
        <item name="android:background">@drawable/bg_message_sent</item>
        <item name="android:textColor">@color/message_sent_text_dark</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReceivedMessageBubble">
        <item name="android:background">@drawable/bg_message_received</item>
        <item name="android:textColor">@color/message_received_text_dark</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Dark Mode Toolbar -->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/surface_color_dark</item>
        <item name="titleTextColor">@color/text_primary_dark</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>